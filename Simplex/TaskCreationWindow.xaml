<Window x:Class="Simplex.TaskCreationWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Simplex"
        mc:Ignorable="d"
        Title="taskCreationWindow" Height="422" Width="504">
    <Grid>
        <TextBox x:Name="varNumTB" HorizontalAlignment="Left" Height="20" Margin="165,14,0,0" TextWrapping="Wrap" Text="3" VerticalAlignment="Top" Width="70" TextChanged="matrixInfoChanged" />
        <Label x:Name="label" Content="Количество переменных:" HorizontalAlignment="Left" Margin="10,10,0,0" VerticalAlignment="Top" Height="28" Width="155"/>
        <TextBox x:Name="condNumTB" HorizontalAlignment="Left" Height="20" Margin="165,47,0,0" TextWrapping="Wrap" Text="3" VerticalAlignment="Top" Width="70" TextChanged="matrixInfoChanged"/>
        <Label x:Name="label_Copy" Content="Количество условий:" HorizontalAlignment="Left" Margin="10,43,0,0" VerticalAlignment="Top" Height="28" Width="155"/>
        <TextBox x:Name="systemInfo" HorizontalAlignment="Left" Height="53" Margin="255,14,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="220" IsReadOnly="True"/>

    </Grid>
</Window>
